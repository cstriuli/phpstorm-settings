<toolSet name="External Tools">
  <tool name="PHPCSFixer" description="Fixes PHP files on demand" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="/usr/local/bin/php-cs-fixer" />
      <option name="PARAMETERS" value="--config=$ProjectFileDir$/.php_cs fix &quot;$FileDir$/$FileName$&quot; -v" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>